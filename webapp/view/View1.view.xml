<mvc:View
		controllerName="ui5con2019.controller.View1"
		xmlns:mvc="sap.ui.core.mvc"
		displayBlock="true"
		xmlns="sap.m"
		xmlns:grid="sap.ui.layout.cssgrid"
		xmlns:core="sap.ui.core">
	<App>
		<Page title="{i18n>appTitle}" class="sapUiContentPadding" id="hrSystemPage" busy="true">
			<subHeader>
				<Toolbar>
					<Button text="{i18n>userInfoNewUser}" press="handleNewItemPress" />

					<ToolbarSpacer/>

					<Label text="Visible Fields:"/>
					<MultiComboBox	width="15rem"
									selectedKeys="{config>/visibleFields}"
									items="{
										path: 'config>/availableFields',
										templateShareable: false
									}">
						<core:Item key="{config>field}" text="{config>fieldName}"/>
					</MultiComboBox>

					<Button text="{i18n>goBtn}" type="Emphasized" press="handleFilterPress" />
				</Toolbar>
			</subHeader>
			<content>
				<grid:CSSGrid
						id="gridLayout"
						items="{
							path: '/records'
						}">

					<core:Fragment fragmentName="ui5con2019.view.fragments.UserInfo" type="XML"/>

					<grid:customLayout>
						<grid:GridResponsiveLayout>
							<grid:layoutS>
								<grid:GridSettings
										gridTemplateColumns="repeat(auto-fit, 100%)"
										gridRowGap="1rem"
										gridColumnGap="1rem">
								</grid:GridSettings>
							</grid:layoutS>
							<grid:layout>
								<grid:GridSettings
										gridTemplateColumns="repeat(auto-fit, 31%)"
										gridRowGap="1rem"
										gridColumnGap="1rem">
								</grid:GridSettings>
							</grid:layout>
							<grid:layoutXL>
								<grid:GridSettings
										gridTemplateColumns="repeat(auto-fit, 24%)"
										gridRowGap="1rem"
										gridColumnGap="1rem">
								</grid:GridSettings>
							</grid:layoutXL>
						</grid:GridResponsiveLayout>
					</grid:customLayout>
				</grid:CSSGrid>
			</content>
		</Page>
	</App>
</mvc:View>