<mvc:View
	controllerName="ui5con2019.controller.View1"
	xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:grid="sap.ui.layout.cssgrid"
	xmlns:form="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
	xmlns:f="sap.f"
	xmlns:card="sap.f.cards">
	<Panel id="panelCSSGrid">
		<headerToolbar>
			<Toolbar height="3rem">
				<Title text="UI5 test app"/>
			</Toolbar>
		</headerToolbar>
		<content>
			<Text text="Test description"/>
			<grid:CSSGrid id="grid1">
				<grid:customLayout>
					<grid:GridResponsiveLayout layoutChange="onLayoutChange">
						<grid:layoutS>
							<grid:GridSettings
									gridTemplateColumns="repeat(auto-fit, 8rem)"
									gridAutoRows="5rem"
									gridRowGap="1rem"
									gridColumnGap="1rem">
							</grid:GridSettings>
						</grid:layoutS>
						<grid:layout>
							<grid:GridSettings
									gridTemplateColumns="repeat(auto-fit, 12rem)"
									gridAutoRows="5rem"
									gridRowGap="1rem"
									gridColumnGap="1rem">
							</grid:GridSettings>
						</grid:layout>
						<grid:layoutXL>
							<grid:GridSettings
									gridTemplateColumns="repeat(auto-fit, 20rem)"
									gridAutoRows="5rem"
									gridRowGap="1rem"
									gridColumnGap="1rem">
							</grid:GridSettings>
						</grid:layoutXL>
					</grid:GridResponsiveLayout>
				</grid:customLayout>
				<grid:items>
					<VBox class="demoBox">
						<f:Card
							class="sapUiMediumMargin"
							width="300px">
							<f:header>
								<card:Header
									title="Project Cloud Transformation"
									subtitle="Revenue per Product | EUR"/>
							</f:header>
							<f:content>
								<List
									showSeparators="None"
									items="" >
									<CustomListItem>
										<HBox
											alignItems="Center"
											justifyContent="SpaceBetween">
											<VBox class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom" >
												<Title level="H3" text="Title" />
											</VBox>

										</HBox>
									</CustomListItem>
								</List>
							</f:content>
						</f:Card>
					</VBox>
					<VBox class="demoBox">
						<Text text="B" wrapping="true" />
					</VBox>
					<VBox class="demoBox">
						<Text text="C" wrapping="true" />
					</VBox>
				</grid:items>
			</grid:CSSGrid>
		</content>
	</Panel>
</mvc:View>