<core:FragmentDefinition
		xmlns="sap.m"
		xmlns:core="sap.ui.core"
		xmlns:f="sap.f"
		xmlns:card="sap.f.cards">
	<f:Card>
		<f:header>
			<card:Header title="{= ${title} + ' ' + ${first_name} + ' ' + ${last_name} }" subtitle="{company}"/>
		</f:header>
		<f:content>
			<VBox>
				<core:Fragment fragmentName="ui5con2019.view.fragments.UserDisplay" type="XML" visible="{= ${meta/editable} !== true}" />
				<core:Fragment fragmentName="ui5con2019.view.fragments.UserEdit" type="XML" visible="{= ${meta/editable} === true}" />
			</VBox>
		</f:content>
	</f:Card>
</core:FragmentDefinition>