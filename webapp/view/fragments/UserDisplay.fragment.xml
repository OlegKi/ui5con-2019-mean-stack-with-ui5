<core:FragmentDefinition
		xmlns="sap.m"
		xmlns:core="sap.ui.core"
		xmlns:f="sap.f"
		xmlns:form="sap.ui.layout.form">

	<core:InvisibleText text="{id}"/>

	<form:SimpleForm
			editable="false"
			layout="ResponsiveGridLayout">
		<form:content>
			<f:Avatar src="{avatar}" displaySize="S" displayShape="Square"/>

			<Label text="{i18n>userInfoTitle}" visible="{= !!${title} }" />
			<Text text="{title}"/>

			<Label text="{i18n>userInfoFirstName}" visible="{= !!${first_name} }" />
			<Text text="{first_name}"/>

			<Label text="{i18n>userInfoLastName}" visible="{= !!${last_name} }"/>
			<Text text="{last_name}"/>

			<Label text="{i18n>userInfoEmail}" visible="{= !!${email} }"/>
			<Text text="{email}"/>

			<Label text="{i18n>userInfoJobTitle}" visible="{= !!${job_title} }"/>
			<Text text="{job_title}"/>

			<Label text="{i18n>userInfoCompany}" visible="{= !!${company} }"/>
			<Text text="{company}"/>

			<Label text="{i18n>userInfoDepartment}" visible="{= !!${department} }"/>
			<Text text="{department}"/>

			<Label text="{i18n>userInfoSpokenLanguages}" visible="{= !!${languages} }"/>
			<Text text="{languages}"/>

			<Label text="{i18n>userInfoUniversity}" visible="{= !!${university} }"/>
			<Text text="{university}"/>

			<Label text="{i18n>userInfoSkills}" visible="{= !!${skills} }"/>
			<Text text="{skills}"/>

			<Label text="{i18n>userInfoSelfDescription}" visible="{= !!${self_decription} }"/>
			<Text text="{self_decription}"/>
		</form:content>
	</form:SimpleForm>

	<OverflowToolbar design="Solid" class="sapContrast">
		<ToolbarSpacer/>
		<Button icon="sap-icon://edit" type="Transparent" press="handleEditRecord"/>
		<Button icon="sap-icon://delete" type="Transparent" press="handleDeleteRecord"/>
	</OverflowToolbar>
</core:FragmentDefinition>