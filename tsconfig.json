{
  "compilerOptions": {
	// path to output directory
	"outDir": "./webapp/",
	// allow sourcemap support
	"sourceMap": true,
	// enable strict null checks as a best practice
	"strictNullChecks": true,
	// specify module code generation. "none" because UI5 has its own unique modules system.
	"module": "none",
	// specify ECMAScript target version
	"target": "es5",
	// allow a partial TypeScript and JavaScript codebase
	"allowJs": true,
	"declaration": true,
	// We are not interested in generating any code.
	"noEmit": true,
	"checkJs": true,
	"types": [
	  "@openui5/ts-types"
	]
  },
  "include": [
	"./src/"
  ]
}